# Set default values for all following accounts.
defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

# Gmail
account gmail
host smtp.gmail.com
port 587
from felipe.contreras@gmail.com
user felipe.contreras

# Infradead
# ssh -L 1587:smtpauth.infradead.org:587 bombadil.infradead.org
account infradead
host localhost
port 1587
tls on
auth on
tls_certcheck off
tls_trust_file
from felipec@infradead.org
user myuser
password password

# felipec.org
# ssh -L 2026:mail.felipec.org:26 f
account felipec
host localhost
port 2026
tls on
auth on
tls_certcheck off
tls_trust_file
from felipec@felipec.org
user myuser
password mypassword

# Default account
account default : gmail
