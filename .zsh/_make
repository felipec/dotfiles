#compdef make

_make_parse () {
  awk -v RS= -F: "!/^$1/ { next } \$1 ~ /^[^#%]+\$/ { print \$1 }"
}

local -a targets cmd=(${words[1,CURRENT-1]})
local cur=$words[CURRENT] prev=$words[CURRENT-1]
local ret=1

if [[ "$prev" == -[CI] ]]; then
  _files -/ && ret=0
else
  targets=($($cmd -npq .DEFAULT 2> /dev/null | _make_parse "$cur"))
  _multi_parts -f -- / targets && ret=0
fi

return ret
