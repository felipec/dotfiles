set realname = "Felipe Contreras"
alternates "felipe.contreras@".*

set sendmail = "msmtp"
set envelope_from = yes

source ~/.mutt/profiles/local

set header_cache = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set certificate_file = ~/.mutt/certificates
set ssl_verify_host = no

set move = no
set reverse_alias = yes
set sort = threads

ignore x- list- precedence: in-reply-to delivered-to errors-to
ignore domainkey-signature thread-
ignore mailing-list authentication-results dkim-signature

## Index

# color header brightblack default ^(From|Subject):

set index_format = "%4C %{%y.%m.%d} %-40.40F %s"
set attribution = "On %d, %F wrote:"

source ~/.mutt/color
source ~/.mutt/aliases

bind index "^" imap-fetch-mail
