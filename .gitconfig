[color]
	ui = auto
[alias]
	s = show
	c = commit -v -s
	r = reset
	d = describe --tags
	b = branch
	rb = rebase
	rbi = rebase --interactive
	rbc = rebase --continue
	co = checkout
	st = status
	pi = cherry-pick
	mt = mergetool
	h = help
	l = log --oneline --decorate
	lc = log ORIG_HEAD.. --stat --no-merges
	lg = log --oneline --decorate --graph
	bg = bisect good
	bb = bisect bad
	bs = bisect skip
	current = rev-parse HEAD
[merge]
	tool = gvimdiff
	defaulttoupstream = true
[mergetool]
	prompt = false
[core]
	excludesfile = /home/felipec/.gitignore
	pager = less -FRSX
[sendemail]
	aliasesfile = /home/felipec/.mutt/aliases
	aliasfiletype = mutt
	chainreplyto = false
	confirm = never
	smtpserver = /usr/bin/msmtp
	envelopesender = auto
	specifyauthor = false
[user]
	name = Felipe Contreras
	email = felipe.contreras@gmail.com
[receive]
	denyCurrentBranch = warn
[push]
	default = simple
[url "git@github.com:"]
	insteadOf = gh:
