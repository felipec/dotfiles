[user]
	name = Felipe Contreras
	email = felipe.contreras@gmail.com
[alias]
	co = commit -s
	bl = branch-list

	short = show --quiet --format=%h
	ref = show --quiet --format=reference

	d = diff
	o = show -C
	p = push
	b = branch
	s = stage

	lo = log ORIG_HEAD.. --stat --no-merges

	rbi = rebase --interactive
	rbc = rebase --continue
	bg = bisect good
	bb = bisect bad
	bs = bisect skip
[merge]
	tool = gvimdiff3
	log = true
[mergetool]
	keepbackup = false
	automerge = true
[sendemail]
	smtpserver = /usr/bin/msmtp
	assume8bitencoding = utf-8
	confirm = never
	envelopesender = auto
	annotate = true
[core]
	mode = progress
[format]
	coverletter = auto
[receive]
	denyCurrentBranch = warn
[notes]
	rewriteref = refs/notes/*
[integration]
	autocontinue = true
[include]
	path = ~/.config/git/smartlist.config
