[user]
	name = Felipe Contreras
	email = felipe.contreras@gmail.com
[alias]
	advance = merge --ff-only
	undo = reset --hard @{1}
	sw = switch
	c = commit -v
	co = checkout
	ci = commit
	rb = rebase
	st = status -s -b
	d = diff
	s = stage
	o = show -C
	p = push
	r = reset
	b = branch
	rbi = rebase --interactive
	rbc = rebase --continue
	pi = cherry-pick
	mt = mergetool
	h = help
	l = log --oneline --decorate --boundary
	lg = l --graph
	lo = log ORIG_HEAD.. --stat --no-merges
	bg = bisect good
	bb = bisect bad
	bs = bisect skip
	bv = branch -v --list
	short = show --quiet --format=reference
	v = "!f() { gitk \"$@\" & }; f"
[merge]
	tool = gvimdiff3
	conflictstyle = diff3
	log = true
[mergetool]
	keepbackup = false
	automerge = true
[core]
	excludesfile = ~/.config/git/ignore
	mode = progress
[sendemail]
	aliasesfile = ~/.mutt/aliases
	aliasfiletype = mutt
	confirm = never
	smtpserver = /usr/bin/msmtp
	envelopesender = auto
	annotate = true
	assume8bitEncoding = utf-8
[format]
	coverletter = auto
[receive]
	denyCurrentBranch = warn
[url "git@github.com:"]
	insteadOf = gh:
[url "/mnt/personal/"]
	insteadOf = data:
[rerere]
	enabled = true
[notes]
	rewriteref = refs/notes/*
[tag]
	sort = -version:refname
[smartlist]
	friendly = true
	merge-base = false
[integration]
	autocontinue = true
