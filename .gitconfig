[user]
	name = Felipe Contreras
	email = felipe.contreras@gmail.com
[alias]
	co = checkout
	ci = commit
	rb = rebase
	st = status -s -b
	d = diff
	s = stage
	o = show -C
	c = commit -v
	p = push
	r = reset
	b = branch
	rbi = rebase --interactive
	rbc = rebase --continue
	pi = cherry-pick
	mt = mergetool
	h = help
	l = log --oneline --decorate
	lc = log ORIG_HEAD.. --stat --no-merges
	lg = log --oneline --decorate --graph
	bg = bisect good
	bb = bisect bad
	bs = bisect skip
	bv = branch -v --list
	short = show --quiet --format='%C(auto)%h (%s)%C(reset)'
[merge]
	tool = gvimdiff3
	conflictstyle = diff3
	log = true
[core]
	excludesfile = ~/.config/git/ignore
	mode = progress
	editor = vim
[sendemail]
	aliasesfile = ~/.mutt/aliases
	aliasfiletype = mutt
	confirm = never
	smtpserver = /usr/bin/msmtp
	envelopesender = auto
	annotate = true
	assume8bitEncoding = utf-8
[format]
	coverletter = auto
[receive]
	denyCurrentBranch = warn
[url "git@github.com:"]
	insteadOf = gh:
[url "/mnt/personal/"]
	insteadOf = data:
[rerere]
	enabled = true
[notes]
	rewriteref = refs/notes/*
[tag]
	sort = -version:refname
