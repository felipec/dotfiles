[user]
	name = Felipe Contreras
	email = felipe.contreras@gmail.com
[alias]
	bl = branch-list

	short = show --quiet --format=%h
	ref = show --quiet --format=reference
	stopped = !git show $(cat .git/rebase-merge/stopped-sha)

	d = diff
	o = show -C
	p = push
	b = branch
	s = stage

	cos = commit --signoff
	cod = commit --no-signoff
	coa = commit --amend

	lo = log ORIG_HEAD.. --stat --no-merges

	rbi = rebase --interactive
	rbc = rebase --continue
	bg = bisect good
	bb = bisect bad
	bs = bisect skip

	sl = "!f() { : git log ; git simple-list lg \"$@\"; }; f"
	sv = "!f() { : git log ; git simple-list v \"$@\"; }; f"
[merge]
	tool = svimdiff
	log = true
[mergetool]
	keepbackup = false
	automerge = true
[sendemail]
	smtpserver = /usr/bin/msmtp
	assume8bitencoding = utf-8
	confirm = never
	envelopesender = auto
	annotate = true
[core]
	mode = progress
[format]
	coverletter = auto
[receive]
	denyCurrentBranch = warn
[notes]
	rewriteref = refs/notes/*
[integration]
	autocontinue = true
