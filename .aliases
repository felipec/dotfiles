#!sh

alias gitg=/opt/gitg/bin/gitg
alias gp=~/bin/gst-player
alias e=/opt/epris/bin/epr
alias xo=xdg-open

alias ls="ls --color=auto"
alias grep='grep --color=auto'

alias g="git"
alias m="m"
alias v="gvim"
alias l="ls"
alias vd="gvimdiff"
alias mv="mv -i"
alias ll="ls -l"

alias gka="gk --all"

alias devh="devhelp -s"

gk() { gitk "$@" & }
gkb() { gk --branches=$1 ; }
gkr() { gk --remotes=$1 ; }
gks() { gk --branches=$1 --simplify-by-decoration ; }
