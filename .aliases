#!sh

alias config='git --git-dir=$HOME/.config/dotfiles/.git/ --work-tree=$HOME'
alias crb='git --git-dir=$HOME/.config/dotfiles/.git/ --work-tree=$HOME/.config/dotfiles/'
alias c=config

alias xo=xdg-open
alias sudo="sudo -A"

alias ls="ls --color=auto"
alias grep="grep --color=auto"
alias diff="diff --color=auto"

alias g="git"
alias l="ls"
alias v="$VIM_EDITOR"
alias r='ruby'
alias gd='g diff'
alias gc='g commit'
alias gs='g show'
alias gco='g co'
alias m="mv"
alias vd="$VIM_EDITOR -d"
alias mv="mv -i"
alias ll="ls -l"

# Shorthand for gitk
gk() { gitk "$@" & }

# Shorthand for git log
gl() { git log --oneline --decorate --graph --boundary "$@" ; }

gks() { gk $(git smartlist $@) ; }
gls() { gl $(git smartlist $@) ; }

alias gka='gks all' gla='gls all'
alias gkb='gks branches' glb='gls branches'
alias gkm='gks from' glm='gls from'
alias gku='gks from-upstream' glu='gls from-upstream'
alias gkn='gks negate-upstreams' gln='gls negate-upstreams'

man() {
  LESS_TERMCAP_md=$'\e[1;31m' \
  LESS_TERMCAP_me=$'\e[0m' \
  LESS_TERMCAP_so=$'\e[1;35m' \
  LESS_TERMCAP_se=$'\e[0m' \
  LESS_TERMCAP_us=$'\e[1;32m' \
  LESS_TERMCAP_ue=$'\e[0m' \
  command man "$@"
}
