alias gd='g diff'
alias gv='g vs'
alias gl='g ls'
alias gc='g c'
alias gs='g show'
alias gco='g co'
alias m='mv'
alias vd='$VIM_EDITOR -d'
alias mv='mv -i'
alias ll='ls -l'
