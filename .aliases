#!sh

alias config='git --git-dir=$HOME/.local/share/dotfiles/.git/ --work-tree=$HOME'
alias crb='git --git-dir=$HOME/.local/share/dotfiles/.git/ --work-tree=$HOME/.local/share/dotfiles/'
alias c=config

alias xo=xdg-open
alias sudo='sudo -A'
alias R='R --no-save'

alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias diff='diff --color=auto'

alias g='git'
alias l='ls'
alias v="$VIM_EDITOR"
alias r='ruby'
alias gd='g diff'
alias gc='g commit'
alias gs='g show'
alias gco='g co'
alias m='mv'
alias vd="$VIM_EDITOR -d"
alias mv='mv -i'
alias ll='ls -l'

man() {
  LESS_TERMCAP_md=$'\e[1;31m' \
  LESS_TERMCAP_me=$'\e[0m' \
  LESS_TERMCAP_so=$'\e[1;35m' \
  LESS_TERMCAP_se=$'\e[0m' \
  LESS_TERMCAP_us=$'\e[1;32m' \
  LESS_TERMCAP_ue=$'\e[0m' \
  command man "$@"
}
