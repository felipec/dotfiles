general {
        colors = true
        interval = 5
}

order += "cpu_usage"
order += "disk /"
order += "battery all"
order += "cpu_temperature 0"
order += "load"
order += "tztime local"

battery all {
        format = "%status %percentage"
}

disk "/" {
        format = "%avail"
}

load {
        format = "%1min"
}

tztime local {
        format = "%H:%M:%S"
}

cpu_temperature 0 {
        format = "T: %degrees Â°C"
}
