#!/bin/sh

echo "Importing new mail"

notmuch new

echo "Running global tag additions to tag new mail"

notmuch tag +bugs from:bugzilla-daemon and not tag:bugs and tag:inbox
notmuch tag +to-me to:felipe.contreras and not tag:to-me and not tag:bugs and tag:inbox
notmuch tag +sent -inbox -unread from:felipe.contreras and not tag:sent and tag:inbox

notmuch tag +gst-dsp -inbox to:gst-dsp@googlegroups.com and not tag:gst-dsp and tag:inbox
notmuch tag +libscrobber -inbox to:libscrobbler@googlegroups.com and not tag:libscrobbler and tag:inbox
notmuch tag +msn-pecan -inbox to:msn-pecan@googlegroups.com and not tag:msn-pecan and tag:inbox

echo "Done"
